{{! Plug this code into the body }}
{{!< default}}

{{! Post Context }}
{{#post}}

    {{> post-meta}}

    {{! Header }}
    <header class="animated fadeIn" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
        <div class="container">
            {{> title}}
            <div class="sidebar text-right meta">
                <div class="published animated fadeInUp">
                    <strong>Last Updated</strong>
                    <time datetime="{{date format='YYYY-MM-DD'}}">{{date format='DD MMM YYYY'}}</time>
                </div>
            </div>
        </div>
    </header>

    {{> content}}

{{/post}}
